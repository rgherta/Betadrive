<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/login"
    tools:context=".LoginActivity"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    >

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <RelativeLayout
        android:id="@+id/login_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


            <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:tint="@color/white"
            android:contentDescription="TODO" android:src="@drawable/ic_taxi" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-condensed"
            android:text="LOREM IPSUM"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:fontFamily="sans-serif-black" />

            <ImageView
                android:id="@+id/landscape"
                android:layout_below="@id/slogan"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="-120dp"
                android:contentDescription="TODO" android:scaleType="centerCrop"
                android:src="@drawable/landscape_transparent"
                tools:srcCompat="@drawable/landscape_transparent"
                android:alpha="0.8"/>




            <com.google.android.gms.common.SignInButton
            android:layout_below="@id/landscape"
            android:id="@+id/sign_in_button"
            android:layout_marginTop="-80dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            app:buttonSize="wide"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/sign_in_button"
            android:layout_centerHorizontal="true"
            >


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="91dp"
                android:text="Sign up"
                android:textSize="12dp"
                android:backgroundTint="@color/colorPrimaryDark"
                app:cornerRadius="3dp"
                android:textAllCaps="false"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/custom_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="91dp"
                android:textSize="12dp"
                android:text="Login"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginLeft="1dp"
                app:cornerRadius="3dp"
                android:textAllCaps="false"
                />
        </LinearLayout>






        </RelativeLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>